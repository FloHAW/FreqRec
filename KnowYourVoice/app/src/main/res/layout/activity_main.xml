<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:src="@drawable/ic_record_audio"
        android:background="#000000"
        android:baselineAlignBottom="false"
        android:paddingBottom="20dp"
        android:layout_above="@+id/recText"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/volume"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:max="4000"
        android:progressDrawable="@drawable/probar" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/freq"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/recText"
        android:textColor="#ff00ff01"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/abc_primary_text_material_light"
        android:text="Push to Start "
        android:textIsSelectable="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:textSize="30sp"
        android:layout_below="@+id/recText"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:clickable="false"
        android:textStyle="bold"
        android:background="#5cb7de"
        android:typeface="monospace" />


</RelativeLayout>
